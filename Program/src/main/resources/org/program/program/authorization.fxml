<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<VBox alignment="CENTER" spacing="20.0" prefWidth="400" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.program.program.Controller" >
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <children>
        <Label text="Authorization" style="-fx-font-size: 18px;" />
        <TextField fx:id="login" promptText="Username" />
        <PasswordField fx:id="pass" promptText="Password" />
        <Button text="Login" onAction="#handleAuthorization" prefWidth="150" prefHeight="25" />
        <Button text="Registration" onAction="#handleRegistration" prefWidth="150" prefHeight="25" />
        <Label fx:id="messageLabel" text="" />
    </children>
    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>
</VBox>
